datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Vendor {
  address   String?
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  name      String?
  orders    Order[]
  phone     String?
  updatedAt DateTime @updatedAt
}

model Customer {
  address   String?
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  name      String?
  orders    Order[]
  phone     String?
  updatedAt DateTime @updatedAt
}

model DeliveryAgent {
  createdAt DateTime                 @default(now())
  email     String?
  id        String                   @id @default(cuid())
  name      String?
  orders    Order[]
  phone     String?
  status    EnumDeliveryAgentStatus?
  updatedAt DateTime                 @updatedAt
}

model Order {
  createdAt       DateTime         @default(now())
  customer        Customer?        @relation(fields: [customerId], references: [id])
  customerId      String?
  deliveryAgent   DeliveryAgent?   @relation(fields: [deliveryAgentId], references: [id])
  deliveryAgentId String?
  id              String           @id @default(cuid())
  orderDate       DateTime?
  orderNumber     String?
  status          EnumOrderStatus?
  totalAmount     Float?
  updatedAt       DateTime         @updatedAt
  vendor          Vendor?          @relation(fields: [vendorId], references: [id])
  vendorId        String?
}

enum EnumDeliveryAgentStatus {
  Option1
}

enum EnumOrderStatus {
  Option1
}
